
<style>
	body {font-family: Arial, Helvetica, sans-serif;}
	* {box-sizing: border-box}

  .login_form {
    margin-top: 50px;
    height: auto;
    min-height: 600px
  }

	/* Full-width input fields */
	.login_form input[type=text], .login_form input[type=password] {
		width: 100%;
		padding: 5px;
		margin: 5px 0 10px 0;
		display: inline-block;
		height: 40px;
	}

	.login_form input[type=text]:focus, .login_form input[type=password]:focus {
		background-color: #ddd;
		outline: none;
	}

	.login_form hr {
		border: 1px solid #f1f1f1;
		margin-bottom: 25px;
	}

	/* Set a style for all buttons */
	.login_form button {
		background-color: orange;
		font-style: bold;
		font-size: 14px;
		padding: 10px 20px;
		margin: 8px 0;
		border: none;
		cursor: pointer;
		width: 100%;
		opacity: 0.9;
	}

	.login_form button:hover {
		opacity:1;
	}

	/* Extra styles for the cancel button */
	.login_form.cancelbtn {
		padding: 14px 20px;
		background-color: #f44336;
	}

	/* Float cancel and signup buttons and add an equal width */
	.login_form.cancelbtn, .login_form.signupbtn {
	  <!-- float: center; -->
	  width: 50%;
	}

	/* Add padding to container elements */
	.container {
		padding: 16px;
	}

	/* Clear floats */
	.clearfix::after {
		content: "";
		clear: both;
		display: table;
	}

	/* Change styles for cancel button and signup button on extra small screens */
	/* @media screen and (max-width: 300px) {
		.cancelbtn, .signupbtn {
		   width: 100%;
		}
	} */
</style>
<div class="login_form">
  <form id="frm_login" action="/session/login" method="post" style="border:1px solid #ccc">
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="container">
      <!-- <hr> -->
      <h5 style="font-size:20px; margin-top:10px;">  Đăng nhập</h5>
      <br>

      <label for="email"><b>Email</b></label>
      <input type="text" placeholder="Nhập email" name="auth[email]" required>

      <label for="password"><b>Mật khẩu</b></label>
      <input type="password" placeholder="Nhập mật khẩu" name="auth[password]" required>

      <div class="log_in" >
        <button type="submit" onclick="JpShop.onSubmit('frm_login')" style="margin-left:0%;">Đăng nhập</button>
      </div>

      <hr>
      <p>Nếu bạn chưa có tài khoản? <a href="/my/register">Đăng ký</a></p>
    </div>
  </form>
</div>
